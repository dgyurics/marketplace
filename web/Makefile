.PHONY: all install dev build preview clean clean-all

# Default: start development server
all: dev

# Install project dependencies
install:
	npm install

# Run dev server
dev:
	npm run dev

# Build for production
build:
	npm run build

# Preview built app
preview:
	npm run preview

# Clean dist directory
clean:
	rm -rf dist

# Clean all generated files and modules
clean-all:
	rm -rf dist node_modules
